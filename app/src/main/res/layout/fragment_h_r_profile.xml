<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lighter_gray"
    android:orientation="vertical"
    tools:context=".fragment.HRProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/header_cover_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/lighter_gray"
                android:scaleType="centerCrop" />

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@+id/header_cover_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-130dp"
                android:clickable="true"
                android:elevation="5dp"
                android:padding="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/man"
                app:civ_border_color="#FFFFFFFF"
                app:civ_border_width="3dp" />

            <RelativeLayout
                android:id="@+id/profile_layout"
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:layout_below="@+id/header_cover_image"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/bgcolor"
                android:elevation="4dp">


                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:text="My Account"
                    android:textColor="@color/green"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_layout"
                android:background="@color/lighter_gray"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/label1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/skill_layout"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/re"
                    android:paddingLeft="4dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:text="Personal Details"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <RelativeLayout
                    android:id="@+id/personal_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/label1"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bgcolor"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <ImageView
                        android:id="@+id/hr_icon1"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginHorizontal="5dp"
                        android:src="@drawable/ic_edit" />

                    <TextView
                        android:id="@+id/txt_my_mail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:drawableLeft="@drawable/ic_my_mail"
                        android:drawablePadding="10dp"
                        android:text=""
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/txt_my_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_my_mail"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="5dp"
                        android:drawableStart="@drawable/ic_my_phone"
                        android:drawablePadding="10dp"
                        android:text=""
                        android:textSize="15dp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txt_my_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_my_phone"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="5dp"
                        android:drawableStart="@drawable/ic_my_location"
                        android:drawablePadding="10dp"
                        android:text=""
                        android:textSize="15dp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txt_my_dob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_my_city"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="5dp"
                        android:drawableStart="@drawable/ic_my_date"
                        android:drawablePadding="10dp"
                        android:text=""
                        android:textSize="15dp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txt_my_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_my_dob"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="5dp"
                        android:drawableStart="@drawable/ic_my_gender"
                        android:drawablePadding="10dp"
                        android:text=""
                        android:textSize="15dp"
                        android:visibility="visible" />


                </RelativeLayout>

                <TextView
                    android:id="@+id/label2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/personal_layout"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/re"
                    android:paddingLeft="4dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:text="Company"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <RelativeLayout
                    android:id="@+id/company_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/label2"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bgcolor"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <ImageView
                        android:id="@+id/icon2"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginHorizontal="5dp"
                        android:src="@drawable/ic_edit"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txt_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="15dp"
                        android:text="Give your company details."
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/txt_my_company_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_1"
                        android:layout_marginHorizontal="20dp"
                        android:drawableLeft="@drawable/ic_my_designation"
                        android:drawablePadding="10dp"
                        android:text=""
                        android:textSize="15dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txt_my_company_about"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_my_company_name"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="5dp"
                        android:drawableStart="@drawable/ic_my_designation"
                        android:drawablePadding="10dp"
                        android:text=""
                        android:textSize="15dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txt_my_company_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_my_company_about"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="5dp"
                        android:drawableStart="@drawable/ic_my_phone"
                        android:drawablePadding="10dp"
                        android:text=""
                        android:textSize="15dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txt_my_company_website"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_my_company_phone"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="5dp"
                        android:drawableStart="@drawable/ic_my_website"
                        android:drawablePadding="10dp"
                        android:text=""
                        android:textSize="15dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txt_my_company_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_my_company_website"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="5dp"
                        android:drawableStart="@drawable/ic_my_city"
                        android:drawablePadding="10dp"
                        android:text=""
                        android:textSize="15dp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/btn_company"
                        android:layout_width="315dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_my_company_city"
                        android:layout_centerHorizontal="true"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/border_button"
                        android:drawableLeft="@drawable/ic_add"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="91dp"
                        android:text="Add Company"
                        android:textAllCaps="false"
                        android:textColor="@color/green" />


                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>