<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/job_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/background"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:orientation="vertical"
        android:layout_marginBottom="5dp">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="5dp"
          android:layout_marginTop="5dp"
          >
          <ImageView
              android:id="@+id/icon2"
              android:layout_width="25dp"
              android:layout_height="wrap_content"
              android:layout_marginHorizontal="5dp"
              android:layout_marginTop="8dp"
              android:layout_alignParentEnd="true"
              android:src="@drawable/ic_baseline_arrow_forward_ios_24"/>
          <TextView
              android:id="@+id/job_title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="3dp"
              android:paddingLeft="10dp"
              android:text="helo"
              android:textStyle="bold"
              android:textColor="@color/green"
              android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
      </RelativeLayout>

        <TextView
            android:id="@+id/txt_company_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="23dp"
            android:layout_marginTop="5dp"
            android:drawableStart="@drawable/ic_my_company"
            android:drawablePadding="10dp"
            android:text="Company name"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/txt_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="23dp"
            android:layout_marginTop="5dp"
            android:drawableStart="@drawable/ic_my_location"
            android:drawablePadding="10dp"
            android:text="Location"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/txt_salary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="23dp"
            android:layout_marginTop="5dp"
            android:drawableStart="@drawable/ic_job_salary"
            android:drawablePadding="10dp"
            android:text="10000"
            android:textSize="15dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="5dp"
            android:background="@color/green"/>
        <TextView
            android:id="@+id/txt_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="23dp"
            android:layout_marginTop="5dp"
            android:text="Job Description"
            android:textSize="15dp" />

    </LinearLayout>




</androidx.cardview.widget.CardView>