<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="Personal Details" />
        <Button
            android:id="@+id/educational_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Education Details"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="20dp"/>
        <Button
            android:id="@+id/addskill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add skills"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="20dp"/>
        <Button
            android:id="@+id/worl_experience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Work Exp"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="20dp"/>
        <Button
            android:id="@+id/project_work"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Project work"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="20dp"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>