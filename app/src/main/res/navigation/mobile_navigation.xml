<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.almightymm.job4u.fragment.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_jobPreviewFragment"
            app:destination="@id/jobPreviewFragment" />
        <action
            android:id="@+id/action_homeFragment_to_jobListFragment"
            app:destination="@id/jobListFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.almightymm.job4u.fragment.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_jobPreviewFragment2"
            app:destination="@id/jobPreviewFragment" />
        <action
            android:id="@+id/action_searchFragment_to_jobListFragment"
            app:destination="@id/jobListFragment" />
    </fragment>
    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.almightymm.job4u.fragment.NotificationFragment"
        android:label="Notification"
        tools:layout="@layout/fragment_notification" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.almightymm.job4u.fragment.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_personalDetailsFragment"
            app:destination="@id/personalDetailsFragment" />
        <action
            android:id="@+id/action_profileFragment_to_educationDetailsFragment"
            app:destination="@id/educationDetailsFragment" />
        <action
            android:id="@+id/action_profileFragment_to_addSkillFragment"
            app:destination="@id/addSkillFragment" />
        <action
            android:id="@+id/action_profileFragment_to_workExperienceFragment"
            app:destination="@id/workExperienceFragment" />
        <action
            android:id="@+id/action_profileFragment_to_projectWorkFragment"
            app:destination="@id/projectWorkFragment" />

    </fragment>


    <fragment
        android:id="@+id/savedJobFragment"
        android:name="com.almightymm.job4u.fragment.SavedAppliedPreviewFragment"
        android:label="Saved / Applied Job"
        tools:layout="@layout/fragment_saved_applied_preview" >
        <action
            android:id="@+id/action_savedJobFragment_to_jobPreviewFragment"
            app:destination="@id/jobPreviewFragment" />
    </fragment>
    <fragment
        android:id="@+id/personalDetailsFragment"
        android:name="com.almightymm.job4u.fragment.PersonalDetailsFragment"
        android:label="Personal Details"
        tools:layout="@layout/fragment_personal_details" />
    <fragment
        android:id="@+id/educationDetailsFragment"
        android:name="com.almightymm.job4u.fragment.AddEducationDetailsFragment"
        android:label="Education Details"
        tools:layout="@layout/fragment_add_education_details" />
    <fragment
        android:id="@+id/addSkillFragment"
        android:name="com.almightymm.job4u.fragment.AddSkillFragment"
        android:label="Add Skill"
        tools:layout="@layout/fragment_add_skill" />
    <fragment
        android:id="@+id/workExperienceFragment"
        android:name="com.almightymm.job4u.fragment.WorkExperienceFragment"
        android:label="Work Experience"
        tools:layout="@layout/fragment_work_experience" />
    <fragment
        android:id="@+id/projectWorkFragment"
        android:name="com.almightymm.job4u.fragment.ProjectWorkFragment"
        android:label="Project Work"
        tools:layout="@layout/fragment_project_work" />
    <fragment
        android:id="@+id/jobPreviewFragment"
        android:name="com.almightymm.job4u.fragment.JobPreviewFragment"
        android:label="Job Preview"
        tools:layout="@layout/fragment_job_preview" />
    <fragment
        android:id="@+id/appliedJobFragment"
        android:name="com.almightymm.job4u.fragment.appliedJobFragment"
        android:label="fragment_applied_job"
        tools:layout="@layout/fragment_applied_job" >
        <action
            android:id="@+id/action_appliedJobFragment_to_jobPreviewFragment"
            app:destination="@id/jobPreviewFragment" />
    </fragment>
    <fragment
        android:id="@+id/jobListFragment"
        android:name="com.almightymm.job4u.fragment.JobListFragment"
        android:label="Jobs"
        tools:layout="@layout/fragment_job_list">
        <action
            android:id="@+id/action_jobListFragment_to_jobPreviewFragment"
            app:destination="@id/jobPreviewFragment" />
    </fragment>
</navigation>