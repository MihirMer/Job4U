<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.almightymm.job4u.fragment.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home"/>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.almightymm.job4u.fragment.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.almightymm.job4u.fragment.NotificationFragment"
        android:label="Notification"
        tools:layout="@layout/fragment_notification" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.almightymm.job4u.fragment.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_personalDetailsFragment"
            app:destination="@id/personalDetailsFragment" />
        <action
            android:id="@+id/action_profileFragment_to_educationDetailsFragment"
            app:destination="@id/educationDetailsFragment" />
        <action
            android:id="@+id/action_profileFragment_to_addSkillFragment"
            app:destination="@id/addSkillFragment" />
        <action
            android:id="@+id/action_profileFragment_to_workExperienceFragment"
            app:destination="@id/workExperienceFragment" />
        <action
            android:id="@+id/action_profileFragment_to_projectWorkFragment"
            app:destination="@id/projectWorkFragment" />
        <action
            android:id="@+id/action_profileFragment_to_companyDetailsFragment"
            app:destination="@id/companyDetailsFragment" />

    </fragment>
    <fragment
        android:id="@+id/savedJobFragment"
        android:name="com.almightymm.job4u.fragment.SavedJobFragment"
        android:label="Saved / Applied Job"
        tools:layout="@layout/fragment_saved_job" />
    <fragment
        android:id="@+id/personalDetailsFragment"
        android:name="com.almightymm.job4u.fragment.PersonalDetailsFragment"
        android:label="Personal Details"
        tools:layout="@layout/fragment_personal_details" >
        <action
            android:id="@+id/action_personalDetailsFragment_pop_including_profileFragment"
            app:popUpTo="@id/profileFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/educationDetailsFragment"
        android:name="com.almightymm.job4u.fragment.EducationDetailsFragment"
        android:label="Education Details"
        tools:layout="@layout/fragment_education_details" />
    <fragment
        android:id="@+id/addSkillFragment"
        android:name="com.almightymm.job4u.fragment.AddSkillFragment"
        android:label="Add Skill"
        tools:layout="@layout/fragment_add_skill"/>
    <fragment
        android:id="@+id/workExperienceFragment"
        android:name="com.almightymm.job4u.fragment.WorkExperienceFragment"
        android:label="Work Experience"
        tools:layout="@layout/fragment_work_experience"/>
    <fragment
        android:id="@+id/projectWorkFragment"
        android:name="com.almightymm.job4u.fragment.ProjectWorkFragment"
        android:label="Project Work"
        tools:layout="@layout/fragment_project_work" />
    <fragment
        android:id="@+id/companyDetailsFragment"
        android:name="com.almightymm.job4u.fragment.CompanyDetailsFragment"
        android:label="Company Details"
        tools:layout="@layout/fragment_company_details" />
</navigation>